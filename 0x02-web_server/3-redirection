
ssh ubuntu@35.231.127.55

sudo apt-get -y update
sudo apt-get -y install nginx
sudo ufw allow 'Nginx HTTP'
echo 'Holberton School' > /var/www/html/index.nginx-debian.html
sudo sed -i '/listen 80 default_server;/a rewrite ^/redirect_me https://www.youtube.com/watch?v=CUapPhdM7nc permanent;' /etc/nginx/sites-available/default

sudo nginx -t
sudo systemctl restart nginx
